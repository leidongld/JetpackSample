<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.openld.jetpacksample">

    <application
        android:name=".JetpackApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JetpackSample"
        tools:ignore="AllowBackup">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.JetpackSample.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".lifecycle.LifecycleActivity"
            android:exported="false"
            android:label="LifeCycle Test"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />

        <activity
            android:name=".navigation.NavigationActivity"
            android:exported="false"
            android:label="Navigation Test"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />

        <activity
            android:name=".viewmodel.ViewModelActivity"
            android:exported="false"
            android:label="ViewModel Test"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />

        <activity
            android:name=".room.RoomActivity"
            android:exported="false"
            android:label="Room Test"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />

        <activity
            android:name=".livedata.LiveDataActivity"
            android:exported="false"
            android:label="LiveData Test"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />

        <activity
            android:name=".workmanager.WorkManagerActivity"
            android:exported="false"
            android:label="WorkManager Test"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />

        <activity
            android:name=".databinding.DataBindingActivity"
            android:exported="false"
            android:label="DataBinding Test"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />

        <service android:name=".lifecycle.MyLifecycleService" />
    </application>

</manifest>